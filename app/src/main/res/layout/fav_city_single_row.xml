<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/single_home"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fav_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@android:color/white"
                android:includeFontPadding="false"

                android:padding="5dp"
                android:gravity="center"
                android:textSize="30sp"/>


            <TextView
                android:id="@+id/updatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"

                android:layout_below="@+id/fav_city"
                android:gravity="center"
                android:textSize="16sp"/>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/fav_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"

                android:textSize="60sp"
                style="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day"
                />
            <ImageView
                android:id="@+id/degree"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/fav_temp"
                android:src="@drawable/ic_outline_trip_origin_24"
            />
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>