<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3650"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/ratingHeader"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like the app? Rate us."
        android:textSize="26sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/ratingHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/Excellent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_200"
            android:textColor="@android:color/white"

            android:text="Excellent"/>
        <RadioButton
            android:id="@+id/veryGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_200"
            android:textColor="@android:color/white"

            android:text="Very Good"/>
        <RadioButton
            android:id="@+id/Good"
            android:layout_width="wrap_content"
            android:buttonTint="@color/teal_200"
            android:textColor="@android:color/white"

            android:layout_height="wrap_content"
            android:text="Good"/>
        <RadioButton
            android:id="@+id/SatisFactory"
            android:layout_width="wrap_content"
            android:buttonTint="@color/teal_200"
            android:textColor="@android:color/white"

            android:layout_height="wrap_content"
            android:text="Satisfactory"/>
        <RadioButton
            android:id="@+id/Poor"
            android:layout_width="wrap_content"
            android:buttonTint="@color/teal_200"
        android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="Poor"/>

    </RadioGroup>
    <EditText
        android:id="@+id/emailOfUser"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:hint="   Enter email here"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/et_email_bg"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <Button
        android:id="@+id/Cancel_Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EC407A"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/emailOfUser"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="40dp"/>
    <Button
        android:id="@+id/Submit_Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:backgroundTint="#26C6DA"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/emailOfUser"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>