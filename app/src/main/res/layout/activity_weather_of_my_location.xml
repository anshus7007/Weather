    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar_mine"
        android:layout_width="100dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/progress_bar"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:id="@+id/relativeLayout_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Cancel_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="#2979ff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/city_name_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Delhi"
            android:textSize="45sp"
            android:fontFamily="@font/codec_cold_trial"
            android:gravity="center"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/description_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Haze"
            android:layout_below="@+id/city_name_mine"
            android:textSize="25sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_mine"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/temp_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:textSize="70sp"
                style="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day"
                />
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_outline_trip_origin_24"
                android:layout_toRightOf="@+id/temp_mine"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_below="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H: "
                android:textSize="25sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/max_temp_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_19"
                    android:textSize="25sp"
                    style="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_toEndOf="@id/max_temp_mine"
                    android:src="@drawable/ic_outline_trip_origin_24"
                    />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:textSize="25sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L: "
                android:textSize="25sp"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/min_temp_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_7"
                    android:textSize="25sp"
                    style="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_toEndOf="@+id/min_temp_mine"
                    android:src="@drawable/ic_outline_trip_origin_24"
                    />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pressure"
                    android:layout_width="120dp"
                    android:background="@drawable/card_view"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_height="130dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/pressure">


                        </ImageView>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pressure"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/txtPressure_mine"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1014 hPa"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/humidity"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/card_view"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_width="120dp"
                    android:layout_height="130dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/humidity">


                        </ImageView>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/txtHumidity_mine"

                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1014 hPa"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/wind"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/card_view"
                    card_view:cardElevation="4dp"

                    card_view:cardCornerRadius="5dp"
                    android:layout_width="120dp"
                    android:layout_height="130dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/wind">


                        </ImageView>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/txtWind_mine"

                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1014 hPa"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"

                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cloudness_mine"
                    android:layout_width="120dp"
                    android:background="@drawable/card_view"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_height="130dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/clouds">


                        </ImageView>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cloudness"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/txtCloudness_mine"

                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1014 hPa"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sunrise_mine"
                    android:background="@drawable/card_view"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="120dp"
                    android:layout_height="130dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/sunrise">


                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Sunrise"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtSunrise_mine"

                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1014 hPa"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sunset"
                    android:layout_marginStart="10dp"
                    android:layout_width="120dp"
                    android:background="@drawable/card_view"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_height="130dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ocean">


                        </ImageView>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunset"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/txtSunset_mine"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1014 hPa"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>